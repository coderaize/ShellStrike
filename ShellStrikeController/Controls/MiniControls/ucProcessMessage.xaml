<UserControl x:Class="ShellStrikeController.Controls.MiniControls.ucProcessBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShellStrikeController.Controls.MiniControls"
             mc:Ignorable="d" MinHeight="30"  MinWidth="500">
    <Grid>
        <StackPanel  Margin="1">
            <Border Margin="2" CornerRadius="5" BorderBrush="#FF303030" BorderThickness="1" Background="#FFD4C271">
                <TextBox x:Name="txtBox" Margin="2" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalAlignment="Left" VerticalAlignment="Top" Text="TextBox" TextWrapping="Wrap"  MinWidth="15" MinHeight="20"  Foreground="White"/>
            </Border>
        </StackPanel>

    </Grid>
</UserControl>
